{
  "manifest_version": 2,

  "name": "Timer",
  "description": "This is a simple pomodoro timer.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "pomodoro_x128.png",
    "default_popup": "pomodoro-timer.html"
  },

  "icons": {
    "128": "pomodoro_x128.png"
  },

  "permissions": [
    "background",
    "storage",
    "notifications"
  ],

  "background": {
    "page": "background.html"
  }
}